 public static void main(String args[]) {
    
      int init = 7830;

        int hours = (init / 3600);
        int s = init - (hours * 3600);
        int minutes = s / 60;

        int seconds = s - (minutes * 60);

        System.out.println("Исходная длительность в секундах: " + init);
        System.out.println(hours + " ч. " + minutes + " мин. " + seconds + " c.");
     
    
    }
